{% extends "::base.html.twig" %}

{% block body %}
<div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">
    <div class="uk-grid">
        <div class="uk-width-1-2">
            <form action="{{ path('ts_edit_categoria', {'id': idCat }) }}" method="post" {{ form_enctype(form) }} class="uk-form uk-width-medium-1-3">
                <fieldset>
                <legend>Actualizar Categoria</legend>
                <div class="uk-form-row">
                    {{ form_widget(form) }}
                </div>
                <div class="uk-form-row">
                    <a  class="uk-button uk-button-danger" href="{{ path('ts_home_categoria') }}">Retorno</a>
                    <input type="submit" value="Actualizar" class="uk-button uk-button-primary" />
                </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
{% endblock %}
